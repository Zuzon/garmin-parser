{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "outDir": "compiled",
        "sourceMap": true,
        "baseUrl": "./",
        "declaration": true,
        "lib": [
            "dom",
            "es6"
        ],
        "typeRoots": [
            "../node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "src"
    ],
    "rules": {
        "no-constant-condition": true
    },
    "rulesDirectory": [
        "../node_modules/tslint-eslint-rules/dist/rules"
    ]
}